@model IEnumerable<MvcProductStore.Models.Category>

@{
    ViewBag.Title = "Store";
}

<h2 class="py-4"> Browse Categories</h2>

<p>
    Select from @Model.Count() categories:
</p>

<div class="container">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
                <a href="@Url.Action("Browse", new { categoryId = item.CategoryId })" style="text-decoration: none; color: inherit;">
                    <div class="card">
                        <img src="@Url.Content($"~/Images/categories/{item.CategoryId}.jpg")" class="card-img-top" alt="Category Image">
                        <div class="card-body">
                            <h5 class="card-title">@item.Name</h5>
                            <p class="card-text">@item.Description</p>
                        </div>
                    </div>
                </a>
            </div>
        }
    </div>
</div>

