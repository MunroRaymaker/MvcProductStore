@model MvcProductStore.Models.Product

@{
    ViewBag.Title = "Product - " + Model.Name;
}

<h2>@Model.Name</h2>

<p>
    <img alt="@Model.Name" src="@Model.ImageUrl" style="max-width: 350px;max-height:350px;"/>
</p>
<div id="album-details">
    <p>
        <select class="form-control custom-select custom-select-lg mb-3 w-25" id="Size" name="Size">
            <option>Select Size</option>
            <option>37</option>
            <option>38</option>
            <option>39</option>
            <option>40</option>
            <option>41</option>
            <option>42</option>
            <option>43</option>
            <option>44</option>
            <option>45</option>
            <option>46</option>
            <option>47</option>
        </select>
    </p>
    <p>
        <strong>Category:</strong>
        @Model.Category.Name
    </p>
    <p>
        <strong>Brand:</strong>
        @Model.Brand.Name
    </p>
    <p>
        <strong>Details:</strong>
        @Model.Description
    </p>
    <p>
        <strong>Price:</strong>
        @String.Format("{0:F} {1}", Model.Price, Model.Currency)
        <span class="strike-through">@String.Format("{0:F} {1}", Model.Price * 1.25m, Model.Currency)</span>
    </p>
    <p>
        @Html.ActionLink("+ Add to cart", "AddToCart", "ShoppingCart", new { id = Model.ProductId }, new { @class = "btn btn-success" })
    </p>
</div>



