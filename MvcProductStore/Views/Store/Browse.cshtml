@model MvcProductStore.Models.Category

@{
    ViewBag.Title = "Browse Products";
}


<div class="product-list">
    <h3><em>@Model.Name</em> Products</h3>

    <ul>
        @foreach (var product in Model.Products)
        {
            <li>
                <a href="@Url.Action("Details",
                    new { id = product.ProductId })">
                    <img alt="@product.Name" src="@product.ImageUrl" style="max-height:50px;" />
                    &nbsp;&nbsp;<span>@product.Name</span>
                    &nbsp;&nbsp;<span>@String.Format("{0:F} {1}", product.Price, product.Currency) </span>
                </a>
            </li>
        }
    </ul>
</div>

