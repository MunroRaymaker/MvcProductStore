@model MvcProductStore.Models.Category

@{
    ViewBag.Title = "Browse Products";
}


<div class="product-list">
    <h3><em>@Model.Name</em> Products</h3>

    <ul>
        @foreach (var album in Model.Products)
        {
            <li>
                <a href="@Url.Action("Details",
                    new { id = album.ProductId })">
                    <img alt="@album.Name" src="@album.ImageUrl" style="max-height:50px;" />
                    &nbsp;&nbsp;<span>@album.Name</span>
                </a>
            </li>
        }
    </ul>
</div>

