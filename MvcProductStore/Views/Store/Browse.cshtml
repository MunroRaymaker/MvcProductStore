<h3><em>@Model.Name</em> Products</h3>

<div class="container">
    <div class="row">
        @foreach (var item in Model.Products)
        {
            <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
                <a href="@Url.Action("Details", new { id = item.ProductId })" style="text-decoration: none; color: inherit;">
                    <div class="card">
                        <img src="@item.ImageUrl" class="card-img-top" alt="@item.Name">
                        <div class="card-body">
                            <h5 class="card-title">@item.Name</h5>
                            <p class="card-text">
                                @($"{item.Price:F2} {item.Currency}")
                            </p>
                        </div>
                    </div>
                </a>
            </div>
        }
    </div>
</div>
