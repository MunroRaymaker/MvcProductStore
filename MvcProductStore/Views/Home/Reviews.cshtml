@model IEnumerable<MvcProductStore.ViewModels.ReviewViewModel>

@{
    ViewBag.Title = "Reviews of our store";
}

<h1>Reviews</h1>



@foreach (var item in Model)
{
    <div class="card card-outline-secondary my-4">
        <div class="card-header">
            @item.UserName (@item.Created.ToShortDateString())
        </div>
        <div class="card-body">
             @Html.Raw(item.Comment)
                       
        </div>
    </div>
    <!-- /.card -->
}

<h2>Leave a review</h2>

@using (Html.BeginForm())
{
    <div class="form-horizontal">
        <div class="form-group">
            <label for="userName" class="control-label col-md-2">Your name</label>            
            <div class="col-md-10">
                <input type="text" name="userName" class="form-control" />
            </div>
        </div>

        <div class="form-group">
            <label for="comment" class="control-label col-md-2">Comment</label>
            <div class="col-md-10">
                <input type="text" name="comment" class="form-control" />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Submit" class="btn btn-success" />
            </div>
        </div>
    </div>
}


